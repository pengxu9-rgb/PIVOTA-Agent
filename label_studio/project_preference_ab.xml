<View>
  <Header value="Aurora Preference Labeling v1 â€” Circle Overlay A/B" />
  <Text name="sample_meta" value="source=$source | sample_hash=$sample_hash | baseline=$baseline_id | variant=$variant_id" />

  <View style="display:flex; gap: 16px; align-items:flex-start;">
    <View style="width: 50%;">
      <Header value="Overlay A" />
      <Image name="image_a" value="$image_a" zoom="true" />
    </View>
    <View style="width: 50%;">
      <Header value="Overlay B" />
      <Image name="image_b" value="$image_b" zoom="true" />
    </View>
  </View>

  <Header value="Overall preference" />
  <Text name="overall_hint" value="A/B are blind variants. Choose the more accurate overlay." />
  <Choices name="overall_choice" toName="image_a" required="true" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>
  <Rating name="overall_confidence" toName="image_a" required="true" maxRating="5" />
  <Choices name="overall_reasons" toName="image_a" required="false" choice="multiple">
    <Choice value="hairline_forehead_ambiguous" />
    <Choice value="occlusion_or_shadow" />
    <Choice value="blur_or_low_res" />
    <Choice value="modules_too_small" />
    <Choice value="overall_similar" />
  </Choices>

  <Header value="Per-module preference (strong modules)" />
  <Text name="strong_hint" value="Select A/B/tie/cannot_tell for each module where distinguishable." />

  <Choices name="pref_nose" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>
  <Choices name="pref_forehead" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>
  <Choices name="pref_left_cheek" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>
  <Choices name="pref_right_cheek" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>
  <Choices name="pref_chin" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>

  <Header value="Under-eye (optional weak modules)" />
  <Choices name="pref_under_eye_left" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>
  <Choices name="pref_under_eye_right" toName="image_a" required="false" choice="single-radio">
    <Choice value="A" />
    <Choice value="B" />
    <Choice value="tie" />
    <Choice value="cannot_tell" />
  </Choices>

  <Header value="Notes (optional)" />
  <TextArea name="notes" toName="image_a" required="false" rows="4" maxSubmissions="1" placeholder="Why? (e.g. forehead leaks hair in B)" />
</View>
