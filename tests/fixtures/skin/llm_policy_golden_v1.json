        "userRequestedPhoto": true,
        "detectorConfidenceLevel": "low",
        "uncertainty": true,
        "visionAvailable": true,
        "reportAvailable": true,
        "degradedMode": "report"
      },
      "expect": {
        "decision": "call",
        "downgrade_confidence": true,
        "reasons_include": ["degraded_mode_report"]
      }
    },
    {
      "id": "pass_quality_confident_skips_report",
      "input": {
        "kind": "report",
        "quality": { "grade": "pass", "reasons": ["qc_passed"] },
        "hasPrimaryInput": true,
        "userRequestedPhoto": true,
        "detectorConfidenceLevel": "high",
        "uncertainty": false,
        "visionAvailable": true,
        "reportAvailable": true,
        "degradedMode": "report"
      },
      "expect": {
        "decision": "skip",
        "downgrade_confidence": false,
        "reasons_include": ["detector_confident_template"]
      }
    }
  ]
