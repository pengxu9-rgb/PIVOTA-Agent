{
  "schema_version": "aurora.skin.llm_policy_golden.v1",
  "cases": [
    {
      "id": "fail_quality_skips_vision",
      "input": {
        "kind": "vision",
        "quality": { "grade": "fail", "reasons": ["qc_failed"] },
        "hasPrimaryInput": true,
        "userRequestedPhoto": true,
        "detectorConfidenceLevel": "low",
        "uncertainty": true,
        "visionAvailable": true,
        "reportAvailable": true,
        "degradedMode": "report"
      },
      "expect": {
        "decision": "skip",
        "downgrade_confidence": true,
        "reasons_include": ["photo_quality_fail_retake"]
      }
    },
    {
      "id": "degraded_quality_report_only",
      "input": {
        "kind": "report",
        "quality": { "grade": "degraded", "reasons": ["qc_degraded"] },
