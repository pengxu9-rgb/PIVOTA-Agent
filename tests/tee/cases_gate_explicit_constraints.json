  "cases": [
    {
      "id": "GATE_NO_HOODIE_EN_001",
      "desc": "Gate: date outfit with explicit no-hoodie constraint must exclude hoodies.",
      "request": {
        "query": "date outfit ideas, no hoodies but jackets are okay",
