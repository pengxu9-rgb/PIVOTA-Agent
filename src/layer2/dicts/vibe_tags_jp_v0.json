    "tag_assignment_guidelines": {
      "max_tags": 6,
      "min_tags": 3,
      "rules": [
        {
          "when": "lookSpec.base.finish == 'dewy'",
          "tags": [
            "jp_tsuya"
          ]
        },
        {
          "when": "lookSpec.base.finish == 'matte'",
          "tags": [
            "jp_semi_matte"
          ]
        },
        {
          "when": "lookSpec.base.coverage == 'light'",
          "tags": [
            "jp_skinlike_base",
            "jp_tomeikan"
          ]
        },
        {
          "when": "lookSpec.base.coverage == 'full'",
          "tags": [
            "jp_cover_base",
            "jp_kicchiri"
          ]
        },
        {
          "when": "lookSpec.eye.shadow_shape in ['soft_wash','defined_crease']",
          "tags": [
            "jp_eye_gradation"
          ]
        },
        {
          "when": "lookSpec.eye.shadow_shape in ['smoky']",
          "tags": [
            "jp_eye_soft_smoky"
          ]
        },
        {
          "when": "lookSpec.eye.shadow_shape in ['halo']",
          "tags": [
            "jp_eye_halo"
          ]
        },
        {
          "when": "lookSpec.eye.liner_direction.direction == 'up' AND lookSpec.eye.liner_direction.degree >= 8",
          "tags": [
            "jp_eye_lift",
            "jp_liner_defined"
          ]
        },
        {
          "when": "lookSpec.eye.liner_direction.direction == 'down' AND lookSpec.eye.liner_direction.degree <= -8",
          "tags": [
            "jp_eye_down_soft",
            "jp_liner_subtle"
          ]
        },
        {
          "when": "lookSpec.eye.lash_intensity == 'natural'",
          "tags": [
            "jp_lash_natural"
          ]
        },
        {
          "when": "lookSpec.eye.lash_intensity == 'bold'",
          "tags": [
            "jp_lash_emphasis"
          ]
        },
        {
          "when": "lookSpec.lip.finish == 'gloss'",
          "tags": [
            "jp_lip_glossy"
          ]
        },
        {
          "when": "lookSpec.lip.finish == 'matte'",
          "tags": [
            "jp_lip_matte"
          ]
        },
        {
          "when": "lookSpec.lip.finish == 'satin'",
          "tags": [
            "jp_lip_satin"
          ]
        },
        {
          "when": "lookSpec.eye.lash_intensity in ['natural','medium'] AND lookSpec.base.coverage in ['light','medium'] AND lookSpec.lip.finish in ['satin','gloss']",
          "tags": [
            "jp_daily",
            "jp_shizen_kirei",
            "jp_nukekan"
          ]
        },
        {
          "when": "lookSpec.base.coverage in ['medium','full'] AND lookSpec.eye.lash_intensity in ['medium','bold']",
          "tags": [
            "jp_formal"
          ]
        },
        {
          "when": "lookSpec.eye.lash_intensity == 'bold' AND lookSpec.base.coverage in ['medium','full']",
          "tags": [
            "jp_special"
          ]
        }
      ],
      "avoid": [
        "celebrity references",
        "age/race descriptors",
        "body/weight descriptors",
        "religion/politics",
        "sexual content framing",
        "medical/diagnostic framing",
        "slurs or reclaimed slurs",
        "trend slang likely to age quickly",
        "identity-based labels (ethnicity, nationality, gender identity, disability)"
      ],
      "anti_over_tagging_guidance": [
        "Always assign exactly one base/finish tag at most (e.g., dewy OR soft matte OR radiant glow).",
        "Always assign at most one focus tag (eye_focus OR lip_focus OR balanced_focus).",
        "Do not assign both 'blurred_edges' and 'defined_edges' in the same look; choose the dominant technique impression.",
        "Do not assign more than two eye tags; prefer the most defining feature (e.g., sharp wing OR soft smoky).",
        "Only assign an occasion tag if it is strongly implied by intensity (e.g., bold lashes + medium/full coverage) or explicitly set by the pack; otherwise default to 'everyday/daily'.",
        "If LookSpec contains many 'unknown' values or low confidence, reduce tagging to 3 tags: one finish/base, one style, one occasion."
      ],
      "priority_order_for_assignment": [
        "finish (base.finish, lip.finish)",
        "base (coverage, skinlike vs cover)",
        "eye (liner direction/degree, shadow shape, lash intensity)",
        "focus (eye/lip/balanced)",
        "occasion (everyday/formal/special)",
        "color family (warm/cool/neutral, brown/pink/coral where available)"
      ],
      "market_isolation_checks": [
        "JP: reject any tag id not starting with 'jp_'",
        "Never translate IDs across markets; translation is display-only via labels."
      ]
    }
  },
  "notes": [
    "JP tags include culturally common makeup descriptors in Japanese (透明感, 抜け感, 清潔感) while avoiding identity-based or potentially sensitive labels.",
    "Both markets share parallel semantic coverage (finish, base, eye, lip, focus, occasion, color), but with distinct IDs and culturally appropriate phrasing."
  ],
