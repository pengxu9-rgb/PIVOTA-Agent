{
  "name": "pivota-agent-gateway",
  "version": "0.1.0",
  "description": "Thin gateway for Pivota Shopping Agent: routes /agent/shop/v1/invoke to internal Pivota API operations.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:mock": "USE_MOCK=true node src/server.js",
    "dev": "node src/server.js",
    "dev:mock": "USE_MOCK=true node src/server.js",
    "smoke:layer2": "node scripts/smoke-layer2.js",
    "diag:calibration:train": "node scripts/train_diag_calibration.js",
    "diag:calibration:eval": "node scripts/eval_calibration.js",
    "diag:gold:sample": "node scripts/sample_gold_label_tasks.js",
    "diag:gold:import": "node scripts/import_gold_labels.js",
    "diag:calibrator:train": "node scripts/train_calibrator.js",
    "smoke:lookreplicate:activity": "node scripts/smoke-lookreplicate-activity-slot.js",
    "staging:gemini:e2e": "node scripts/staging-gemini-e2e-run.js",
    "staging:gemini:eval": "node scripts/staging-gemini-eval-run.js",
    "smoke:real": "npm --prefix .. run smoke:real --",
    "db:migrate": "node src/db/cli.js migrate",
    "db:seed": "node src/db/cli.js seed",
    "db:setup": "node src/db/cli.js all",
    "lint:dicts": "node scripts/lint-dicts.js",
    "pretest": "npm run lint:dicts && npm run lint:kb:us && npm run lint:kb:jp && npm run external:lint && npm run internal:lint",
    "test": "jest --runInBand",
    "eval:layer1:us": "node src/eval/layer1/us/runEval.js",
    "eval:layer2_3:us": "node src/eval/layer2_3/us/runEval.js",
    "contract:export": "node scripts/export-contracts-us.js && node scripts/export-contracts-jp.js",
    "contract:export:l2l3": "node scripts/export-contracts-us.js --l2l3 && node scripts/export-contracts-jp.js --l2l3",
    "contract:test": "jest tests/layer1/contracts_us.test.js tests/layer2_3/contracts_us.test.js tests/layer2_3/contracts_jp.test.js tests/layer1/contracts_manifest_us.test.js tests/layer2_3/contracts_manifest_jp.test.js --runInBand",
    "test:aurora-bff:unit": "AURORA_BFF_USE_MOCK=true node --test tests/aurora_bff.node.test.cjs tests/aurora_bff_reco_catalog.node.test.cjs tests/aurora_bff_experiments.node.test.cjs tests/aurora_bff_hard_case_sampler.node.test.cjs tests/aurora_bff_privacy.node.test.cjs tests/aurora_bff_vision_policy.node.test.cjs tests/aurora_bff_pseudo_label_factory.node.test.cjs tests/aurora_bff_pseudo_label_job.node.test.cjs tests/aurora_bff_gold_label_workflow.node.test.cjs tests/aurora_bff_calibration_scripts.node.test.cjs tests/aurora_bff_diag_calibration.node.test.cjs tests/aurora_bff_diag_verify.node.test.cjs tests/aurora_bff_verify_daily_report.node.test.cjs tests/ui_events_schema.node.test.cjs",
    "ci:layer1": "npm run test && npm run contract:test && npm run eval:layer1:us",
    "demo:openai": "node scripts/demo-openai-pivota.mjs",
    "lint:kb:us": "node scripts/lint-technique-kb-us.js",
    "lint:kb:jp": "node scripts/lint-technique-kb-jp.js",
    "lint:kb:trigger-producibility:us": "node scripts/lint-kb-trigger-producibility.js --market US",
    "lint:kb:trigger-producibility:jp": "node scripts/lint-kb-trigger-producibility.js --market JP",
    "lint:kb:role-hints:us": "node scripts/lint-kb-role-hints.js --market US",
    "lint:kb:role-hints:jp": "node scripts/lint-kb-role-hints.js --market JP",
    "kb:import:csv": "node scripts/kb-import-csv.js",
    "kb:check:mapping": "node scripts/kb-check-mapping.js",
    "kb:analyze": "node src/kb/runAnalyzeKBHealth.js",
    "kb:analyze:us": "node src/kb/runAnalyzeKBHealth.js --market=US",
    "kb:analyze:jp": "node src/kb/runAnalyzeKBHealth.js --market=JP",
    "kb:replay": "node src/kb/runReplayKB.js",
    "kb:starter:generate": "node scripts/generate-starter-kb.js",
    "kb:propose:us": "node src/kb/us/proposeNewTechniqueCards.js",
    "handbook:generate": "node scripts/generate-content-handbook.js",
    "external:build-pool": "node scripts/build-external-links-pool.js",
    "external:lint": "node scripts/lint-external-offers-pool.js",
    "external:report": "node scripts/report-external-links-pool.js",
    "external:report:us": "node scripts/report-external-links-pool.js --market US",
    "external:report:jp": "node scripts/report-external-links-pool.js --market JP",
    "internal:build-pins": "node scripts/build-internal-pins.js",
    "internal:lint": "node scripts/lint-internal-pins.js",
    "internal:report": "node scripts/report-internal-pins.js",
    "internal:report:us": "node scripts/report-internal-pins.js --market US",
    "internal:report:jp": "node scripts/report-internal-pins.js --market JP",
    "verify:premerge": "node scripts/verify-pr-file-boundary.js && node scripts/verify-premerge-layer2-slots.js && node scripts/verify-bilingual-resolution.js && node scripts/verify-jp-placeholder-noncrash.js && node scripts/verify-selection-stability.js",
    "mock:pivota": "node scripts/mock-pivota-api.js",
    "demo:status": "node scripts/demo-openai-status.mjs",
    "embeddings:backfill": "node scripts/backfill-products-cache-embeddings.js"
  },
  "keywords": [
    "pivota",
    "agent",
    "acp",
    "ap2",
    "gateway"
  ],
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.885.0",
    "@aws-sdk/client-s3": "^3.885.0",
    "@aws-sdk/s3-request-presigner": "^3.885.0",
    "@google/genai": "^0.7.0",
    "axios": "^1.7.7",
    "busboy": "^1.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "ioredis": "^5.8.2",
    "openai": "^6.9.1",
    "pg": "^8.13.1",
    "pino": "^10.1.0",
    "sharp": "^0.34.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "zod-to-json-schema": "^3.25.0"
  }
}
