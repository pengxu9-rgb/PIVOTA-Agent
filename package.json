{
  "name": "pivota-agent-gateway",
  "version": "0.1.0",
  "description": "Thin gateway for Pivota Shopping Agent: routes /agent/shop/v1/invoke to internal Pivota API operations.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:mock": "USE_MOCK=true node src/server.js",
    "dev": "node src/server.js",
    "dev:mock": "USE_MOCK=true node src/server.js",
    "smoke:layer2": "node scripts/smoke-layer2.js",
    "smoke:real": "npm --prefix .. run smoke:real --",
    "db:migrate": "node src/db/cli.js migrate",
    "db:seed": "node src/db/cli.js seed",
    "db:setup": "node src/db/cli.js all",
    "lint:dicts": "node scripts/lint-dicts.js",
    "pretest": "npm run lint:dicts",
    "test": "jest --runInBand",
    "eval:layer1:us": "node src/eval/layer1/us/runEval.js",
    "eval:layer2_3:us": "node src/eval/layer2_3/us/runEval.js",
    "contract:export": "node scripts/export-contracts-us.js && node scripts/export-contracts-jp.js",
    "contract:export:l2l3": "node scripts/export-contracts-us.js --l2l3 && node scripts/export-contracts-jp.js --l2l3",
    "contract:test": "jest tests/layer1/contracts_us.test.js tests/layer2_3/contracts_us.test.js tests/layer2_3/contracts_jp.test.js tests/layer1/contracts_manifest_us.test.js tests/layer2_3/contracts_manifest_jp.test.js --runInBand",
    "ci:layer1": "npm run test && npm run contract:test && npm run eval:layer1:us",
    "demo:openai": "node scripts/demo-openai-pivota.mjs",
    "lint:kb:us": "node scripts/lint-technique-kb-us.js",
    "lint:kb:jp": "node scripts/lint-technique-kb-jp.js",
    "kb:analyze": "node src/kb/runAnalyzeKBHealth.js",
    "kb:analyze:us": "node src/kb/runAnalyzeKBHealth.js --market=US",
    "kb:analyze:jp": "node src/kb/runAnalyzeKBHealth.js --market=JP",
    "kb:propose:us": "node src/kb/us/proposeNewTechniqueCards.js",
    "mock:pivota": "node scripts/mock-pivota-api.js",
    "demo:status": "node scripts/demo-openai-status.mjs",
    "embeddings:backfill": "node scripts/backfill-products-cache-embeddings.js"
  },
  "keywords": [
    "pivota",
    "agent",
    "acp",
    "ap2",
    "gateway"
  ],
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.885.0",
    "@aws-sdk/s3-request-presigner": "^3.885.0",
    "axios": "^1.7.7",
    "busboy": "^1.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "ioredis": "^5.8.2",
    "openai": "^6.9.1",
    "pg": "^8.13.1",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "zod-to-json-schema": "^3.25.0"
  }
}
